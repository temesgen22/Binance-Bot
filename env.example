# Default Binance Account (for backward compatibility)
BINANCE_API_KEY=changeme
BINANCE_API_SECRET=changeme
BINANCE_TESTNET=true

# Multi-Account Support (optional)
# Define additional Binance accounts using the pattern:
# BINANCE_ACCOUNT_{account_id}_API_KEY=your_api_key
# BINANCE_ACCOUNT_{account_id}_API_SECRET=your_api_secret
# BINANCE_ACCOUNT_{account_id}_NAME=Display Name (optional)
# BINANCE_ACCOUNT_{account_id}_TESTNET=true/false (optional, defaults to BINANCE_TESTNET)
#
# Account ID can be:
# - Numbers: 1, 2, 3, etc. (e.g., BINANCE_ACCOUNT_1_API_KEY)
# - Names: account1, main, test, etc. (e.g., BINANCE_ACCOUNT_main_API_KEY)
# - Alphanumeric with underscores: account_1, trading_account, etc.
#
# Example with numbered accounts (1-8):
# BINANCE_ACCOUNT_1_API_KEY=key1
# BINANCE_ACCOUNT_1_API_SECRET=secret1
# BINANCE_ACCOUNT_1_NAME=Account 1 - Main Trading
# BINANCE_ACCOUNT_1_TESTNET=false
#
# BINANCE_ACCOUNT_2_API_KEY=key2
# BINANCE_ACCOUNT_2_API_SECRET=secret2
# BINANCE_ACCOUNT_2_NAME=Account 2 - Secondary
# BINANCE_ACCOUNT_2_TESTNET=false
#
# BINANCE_ACCOUNT_3_API_KEY=key3
# BINANCE_ACCOUNT_3_API_SECRET=secret3
# BINANCE_ACCOUNT_3_NAME=Account 3 - Test
# BINANCE_ACCOUNT_3_TESTNET=true
#
# ... continue for accounts 4-8 as needed ...
#
# Example with named accounts:
# BINANCE_ACCOUNT_main_API_KEY=key_main
# BINANCE_ACCOUNT_main_API_SECRET=secret_main
# BINANCE_ACCOUNT_main_NAME=Main Trading Account
# BINANCE_ACCOUNT_main_TESTNET=false
#
# BINANCE_ACCOUNT_test_API_KEY=key_test
# BINANCE_ACCOUNT_test_API_SECRET=secret_test
# BINANCE_ACCOUNT_test_NAME=Test Account
# BINANCE_ACCOUNT_test_TESTNET=true

BASE_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT
DEFAULT_LEVERAGE=5
RISK_PER_TRADE=0.01
MAX_CONCURRENT_STRATEGIES=5
API_PORT=8000

# Redis Configuration (optional - for strategy persistence)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# Telegram Notification Configuration (optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_PROFIT_THRESHOLD_USD=100.0
TELEGRAM_LOSS_THRESHOLD_USD=-50.0

